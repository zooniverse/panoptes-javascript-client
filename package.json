{
  "name": "panoptes-client",
  "version": "3.0.0",
  "description": "A Javascript client to access the Panoptes API",
  "main": "./lib/api-client.js",
  "scripts": {
    "build": "webpack --env build",
    "dev": "webpack --display-error-details --progress --colors --watch --env dev",
    "lint": "eslint .; exit 0",
    "lint:watch": "esw --watch --color",
    "test": "find ./src -name '*.spec.js' | xargs mocha --compilers js:babel-core/register --colors  --reporter min",
    "test:watch": "npm run test -- --watch"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.0.2",
    "chai-as-promised": "^7.0.0",
    "eslint": "^3.19.0",
    "eslint-loader": "^1.7.1",
    "eslint-watch": "^3.1.1",
    "mocha": "^3.3.0",
    "webpack": "^2.4.1",
    "yargs": "^7.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zooniverse/panoptes-javascript-client"
  },
  "bugs": {
    "url": "https://github.com/zooniverse/panoptes-javascript-client/issues"
  },
  "homepage": "https://github.com/zooniverse/panoptes-javascript-client",
  "author": "Zooniverse",
  "license": "Apache-2.0"
}
